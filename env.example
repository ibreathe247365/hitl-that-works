# Your Convex deployment URL (get this from your Convex dashboard)
NEXT_PUBLIC_CONVEX_URL=https://your-convex-deployment.convex.cloud

# Site URL for authentication (usually your production domain)
SITE_URL=https://your-domain.com

# Convex site URL for auth configuration
CONVEX_SITE_URL=https://your-domain.com

# Your application's base URL (used for webhooks and internal API calls)
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Google AI API key for Gemini models
GOOGLE_API_KEY=your-google-ai-api-key-here

# Google OAuth credentials for authentication
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

RESEND_API_KEY=re_your-resend-api-key-here
FROM_EMAIL=noreply@your-domain.com

# Slack Bot Token for Slack integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here

# Upstash Redis and Queue
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token-here
QSTASH_TOKEN=your-qstash-token-here

# Webhook signing secret for webhook verification
WEBHOOK_SIGNING_SECRET=your-webhook-signing-secret-here

# Debug flag to disable webhook verification (set to "true" for development)
DEBUG_DISABLE_WEBHOOK_VERIFICATION=false
