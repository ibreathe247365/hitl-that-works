{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**"],
			"env": [
				"UPSTASH_REDIS_REST_URL",
				"UPSTASH_REDIS_REST_TOKEN",
				"INNGEST_EVENT_KEY",
				"INNGEST_SIGNING_KEY",
				"DEBUG_DISABLE_WEBHOOK_VERIFICATION",
				"WEBHOOK_SIGNING_SECRET",
				"GOOGLE_API_KEY",
				"OPENROUTER_API_KEY",
				"NEXT_PUBLIC_APP_URL",
				"RESEND_API_KEY",
				"GOOGLE_CLIENT_ID",
				"GOOGLE_CLIENT_SECRET",
				"SITE_URL",
				"SLACK_INCOMING_WEBHOOK_URL",
				"GITHUB_TOKEN",
				"GITHUB_REPO"
			]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"dev:setup": {
			"cache": false,
			"persistent": true
		}
	}
}
